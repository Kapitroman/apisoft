mixin digital-products()
  section.digital-products&attributes(attributes)
    .container
      .digital-products__image
        +picture("content", "digital-products", "png", 450, 550, alt="abstract picture with theme digital product", true)
        .digital-products__image-text!=digitalProductsImageText
      .digital-products__content-info
        h2=digitalProductsTitle
        +digital-achievements()

        //-ul.digital-products__achievements
          each item in digitalProductsAchievements
            li.digital-products__achievements-item
              p
                span!=item.amount
                span!=item.item
              p!=item.text
