mixin partners-page-item(item)
  .partners-page-item
    .partners-page-item__logo
      img(src=`img/svg/${item.logo[0]}.svg`, width=item.logo[1], height=item.logo[2], alt=item.title, loading="lazy")
    .partners-page-item__content
      h2=item.title
      p=item.text
      +btn({
        href: item.href,
        icon: "arrow",
        text: item.textButton
      }).btn--rotation
