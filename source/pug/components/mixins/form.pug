mixin form()
  .form(data-form-validate, data-callback="base")&attributes(attributes)
    form(action=form.sendMessageAction, method="post", enctype="multipart/form-data")
      .form__fields
        +custom-input({
          inputPlaceholder: "Имя",
          inputName: "name",
          inputId: "name",
          inputType: "text",
        })(data-required, data-validate-type="text")
        +custom-input({
          inputPlaceholder: "E-mail или телефон",
          inputName: "contact",
          inputId: "contact",
          inputType: "text",
        })(data-required, data-validate-type="text")
        +custom-textarea({
          inputPlaceholder: "Краткое описание задачи",
          inputName: "message",
          inputId: "message",
        })(data-required, data-validate-type="text")
        .input-upload.input-upload--file-drop(data-upload="file-drop", tabindex=0, data-validate-type="file",  data-max-size="10485760")

          .input-upload__drop-zone(data-drop-zone)


            span.input-upload__drop-zone-text
                +icon("link", 32, 32)
                | Перетащите или нажмите, чтобы загрузить техническое задание или файлы
          label
            //-+icon("link", 32, 32)
            input(type="file", name="upload-file", tabindex=-1)
            //-span.input-upload Загрузить файл
        //-.input-upload.input-upload--file(data-upload="file")
          label
            input(type="file", name="upload-file")
            +icon("link", 32, 32)
            span Техническое задание или файлы
      p
        | Оставляя заявку, вы соглашаетесь с
        |
        a(href="#") Политикой конфидециальности
      +btn({
        icon: "arrow",
        type: "submit",
        text: "Отправить",
      }).btn--white


