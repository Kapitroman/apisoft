mixin connect-us(options)
  .connect-us&attributes(attributes)
    .connect-us__main
      p=options.text
      if options.modal
        a.connect-us__link(href="#", data-open-modal="message")=options.textHref
      else
        a.connect-us__link(href=options.href)=options.textHref
      if options.icon
        +icon(options.icon[0], options.icon[1], options.icon[2])
    if options.add
      .connect-us__add
        each block in options.add
          +add-block(block)
