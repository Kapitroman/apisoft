mixin header(headerMods, currentUrl)
  header.header(class=headerMods, data-header="")
    .container
      +logo()
      .header__wrapper(data-close-menu)
        nav.header__nav
          .header__nav-wrapper
            ul.header__list
              each link in headerNavigation
                li.header__item
                  a.header__link(href=link.href)= link.text
            .header__add-nav
              .header__contacts
                a(href=footerContacts[0].href)=footerContacts[0].text
                p=footerContacts[1].text
                a(href=footerContacts[2].href)=footerContacts[2].text
              +btn({
                href: headerButtonStart.href,
                icon: headerButtonStart.icon,
                text: headerButtonStart.text,
              }).btn--white.header__button-start(data-open-modal="message")
      fieldset.toggle-language
        legend.visually-hidden Переключатель языка
        label(tabindex=0)
            input.visually-hidden(type="checkbox" name="toggle-language" aria-label="default" tabindex=-1 checked)
            span EN
            span RU
      +btn({
        href: headerButtonStart.href,
        icon: headerButtonStart.icon,
        text: headerButtonStart.text,
      }).header__button-start(data-open-modal="message")
      button.header__burger(type="button", data-burger, aria-label="Переключатель отображения меню", aria-pressed="false")
        span
        span
        span
